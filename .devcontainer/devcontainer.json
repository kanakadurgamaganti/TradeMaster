{
    "name": "trade-master",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools"
            ],
            "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
            "recommendations": [
                "ms-vscode.cpptools"
            ]
        }
    },
    "forwardPorts": [3000],
    "postCreateCommand": "echo 'Container is ready!'",
    "remoteUser": "vscode"
}